---
import AdBlock from './AdBlock.astro';

export interface Props {
  slot: 'after-summary' | 'mid-content' | 'near-bottom';
  height?: number;
}

const { slot, height = 260 } = Astro.props;
---

<AdBlock adSlot={`code-${slot}`} height={height} responsiveHeight={Math.max(120, Math.floor(height * 0.86))} className="my-10" />
