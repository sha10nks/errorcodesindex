---
import { INDUSTRIES, LEGAL_LINKS } from '../utils/site';
import SocialButtons3D from './SocialButtons3D.astro';
---

<footer class="relative mt-20 border-t border-brand-border bg-brand-dark text-slate-400 overflow-hidden">
  {/* Background Image & Overlay */}
  <div class="absolute inset-0 z-0 pointer-events-none">
    <img 
      src="/home%20page%20background.avif" 
      alt="" 
      class="h-full w-full object-cover opacity-40 mix-blend-overlay"
      loading="lazy"
    />
    <div class="absolute inset-0 bg-gradient-to-t from-brand-dark via-brand-dark/95 to-brand-dark/80"></div>
  </div>

  <div class="relative z-10 mx-auto grid max-w-6xl gap-12 px-6 py-16 md:grid-cols-4 lg:grid-cols-5">
    <div class="md:col-span-2 lg:col-span-2">
      <a href="/" class="flex items-center gap-3 text-xl font-bold text-slate-100 hover:text-white transition-colors w-fit">
        <img 
          src="/Logo.svg" 
          alt="ErrorCodesIndex" 
          class="h-7 md:h-9 w-auto object-contain"
          width="150"
          height="36"
          loading="lazy"
          decoding="async"
        />
      </a>
      <p class="mt-6 max-w-sm text-sm leading-relaxed text-slate-400">
        A static reference library for system error codes across multiple industries. Built for developers, technicians, and users who need clear, structured explanations.
      </p>
      <div class="mt-8 text-xs text-slate-500">
        &copy; {new Date().getFullYear()} ErrorCodesIndex.com. All rights reserved.
      </div>
    </div>

    <div>
      <div class="text-sm font-semibold tracking-wide text-slate-100 uppercase">Industries</div>
      <ul class="mt-6 space-y-3 text-sm">
        {INDUSTRIES.map((it) => {
          return (
            <li>
              <a class="block text-slate-400 hover:text-brand-primary transition-colors hover:translate-x-1 duration-200" href={it.href}>
                {it.label}
              </a>
            </li>
          );
        })}
      </ul>
    </div>

    <div>
      <div class="text-sm font-semibold tracking-wide text-slate-100 uppercase">Legal</div>
      <ul class="mt-6 space-y-3 text-sm">
        {LEGAL_LINKS.map((it) => {
          return (
            <li>
              <a class="block text-slate-400 hover:text-brand-primary transition-colors hover:translate-x-1 duration-200" href={it.href}>
                {it.label}
              </a>
            </li>
          );
        })}
      </ul>
    </div>

    {/* Social Buttons Section */}
    <div class="md:col-span-4 lg:col-span-1 flex flex-col justify-start">
        <SocialButtons3D />
    </div>
  </div>
</footer>
