---
import IndustryHubLayout from '../../components/IndustryHubLayout.astro';
import recentData from '../../data/banking/recent.json';
import featuredData from '../../data/banking/featured.json';
import Intro from '../../content/hubs/banking/intro.md';
import Guide from '../../content/hubs/banking/guide.md';
import faqContent from '../../content/hubs/banking/faq.md?raw';
import { parseFaqMarkdown } from '../../utils/faq';

const title = 'Banking Error Codes Directory';
const description = 'A reference for transaction failures, authorization issues, and network communication error codes from banks and payment processors.';
const crumbs = [
  { label: 'Home', href: '/' },
  { label: 'Banking', href: '/banking/' },
];

const faqItems = parseFaqMarkdown(faqContent);
---

<IndustryHubLayout 
  title={title}
  description={description}
  industryKey="banking"
  Intro={Intro}
  Guide={Guide}
  faqItems={faqItems}
  recentItems={recentData}
  featuredItems={featuredData}
  crumbs={crumbs}
/>
