---
import IndustryHubLayout from '../../components/IndustryHubLayout.astro';
import recentData from '../../data/healthcare/recent.json';
import featuredData from '../../data/healthcare/featured.json';
import Intro from '../../content/hubs/healthcare/intro.md';
import Guide from '../../content/hubs/healthcare/guide.md';
import faqContent from '../../content/hubs/healthcare/faq.md?raw';
import { parseFaqMarkdown } from '../../utils/faq';

const title = 'Healthcare Error Codes Directory';
const description = 'A reference for medical, insurance, and claim-related error codes including denial reasons, eligibility failures, and authorization codes.';
const crumbs = [
  { label: 'Home', href: '/' },
  { label: 'Healthcare', href: '/healthcare/' },
];

const faqItems = parseFaqMarkdown(faqContent);
---

<IndustryHubLayout 
  title={title}
  description={description}
  industryKey="healthcare"
  Intro={Intro}
  Guide={Guide}
  faqItems={faqItems}
  recentItems={recentData}
  featuredItems={featuredData}
  crumbs={crumbs}
/>
