---
import IndustryHubLayout from '../../components/IndustryHubLayout.astro';
import recentData from '../../data/gaming/recent.json';
import featuredData from '../../data/gaming/featured.json';
import Intro from '../../content/hubs/gaming/intro.md';
import Guide from '../../content/hubs/gaming/guide.md';
import faqContent from '../../content/hubs/gaming/faq.md?raw';
import { parseFaqMarkdown } from '../../utils/faq';

const title = 'Gaming Error Codes Directory';
const description = 'A reference for console, launcher, and network error codes spanning PlayStation, Xbox, Steam, and major game titles.';
const crumbs = [
  { label: 'Home', href: '/' },
  { label: 'Gaming', href: '/gaming/' },
];

const faqItems = parseFaqMarkdown(faqContent);
---

<IndustryHubLayout 
  title={title}
  description={description}
  industryKey="gaming"
  Intro={Intro}
  Guide={Guide}
  faqItems={faqItems}
  recentItems={recentData}
  featuredItems={featuredData}
  crumbs={crumbs}
/>
