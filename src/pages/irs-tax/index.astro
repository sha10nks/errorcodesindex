---
import IndustryHubLayout from '../../components/IndustryHubLayout.astro';
import recentData from '../../data/irs-tax/recent.json';
import featuredData from '../../data/irs-tax/featured.json';
import Intro from '../../content/hubs/irs-tax/intro.md';
import Guide from '../../content/hubs/irs-tax/guide.md';
import faqContent from '../../content/hubs/irs-tax/faq.md?raw';
import { parseFaqMarkdown } from '../../utils/faq';

const title = 'IRS / Tax Error Codes Directory';
const description = 'A reference for tax filing, identity verification, and refund processing error codes from the IRS and state agencies.';
const crumbs = [
  { label: 'Home', href: '/' },
  { label: 'IRS / Tax', href: '/irs-tax/' },
];

const faqItems = parseFaqMarkdown(faqContent);
---

<IndustryHubLayout 
  title={title}
  description={description}
  industryKey="irs-tax"
  Intro={Intro}
  Guide={Guide}
  faqItems={faqItems}
  recentItems={recentData}
  featuredItems={featuredData}
  crumbs={crumbs}
/>
